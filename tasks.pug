doctype html
html
  head
    title Tapestry EUC Dashboard
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')
    link(rel='stylesheet', href='responsive.css')
    script(src='table2.js')
    script(type='text/javascript').
      //<!--
      function pageScroll() {
      window.scrollBy(0,1);
      scrolldelay = setTimeout(pageScroll,100);
      }
      //-->
  body(onload='pageScroll()')
    .row
      .col-3.menu
        ul
          li(hidden='', style='position:fixed;top:-3%;')
            | Total Incidents 
            #tasks(style='background-color:#fff;font-size:20px; color: blue;')
    table#tablez.table(style='position:absolute;right:10%;')
      tbody
        tr
          th(style='position:sticky;') Task State
          th(style='position:sticky;') Task Number
          th(style='position:sticky;') Created On
          th(style='position:sticky;') Description
          th(style='position:sticky;') Priority
          th(style='position:sticky;') Assignment Group
          th(style='position:sticky;') Assigned To
          th(style='position:sticky;') Made SLA
          th(style='position:sticky;') Business Time Left
